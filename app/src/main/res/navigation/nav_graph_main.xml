        android:name="bsleskov.android.apk.screens.ArchiveFragment"
        android:label="ArchiveFragment" >
        <action
            android:id="@+id/action_archiveFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/streamFragment"
        android:name="bsleskov.android.apk.screens.StreamFragment"
        android:label="fragment_stream"
        tools:layout="@layout/fragment_stream" />
    <fragment
        android:id="@+id/overviewFragment"
        android:name="bsleskov.android.apk.screens.OverviewFragment"
        android:label="OverviewFragment" />
    <fragment
